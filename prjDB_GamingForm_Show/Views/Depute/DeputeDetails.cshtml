@section Scripts {
    <script>
        DetailSkills();
        Recommand();
        function DetailSkills() {
            var count = 1;
            $.ajax('@Url.Content("~/Depute/DetailSkills")', {
                "type": 'Post', //POST、PUT、DELETE//
                "data": { "id": $('#detailid').val() },
                "dataType": "json"
            })
                .done((data) => {
                    console.log(data.indexOf())
                    console.log(data)
                    const DSFrag = $(document.createDocumentFragment());
                    const DS = data.map(DS => `<li><i class="fa fa-angle-right text-primary me-2"></i>${count++} . ${DS}</li>`)
                    DSFrag.append(DS);
                    $('#detailskill').html(DSFrag)
                    
                })


        }

        function Recommand() {
            var count = 1;
            $.ajax('@Url.Content("~/Depute/Recommand")', {
                "type": 'Post', //POST、PUT、DELETE//
                "data": { "id": @Html.DisplayFor(model => model.id) },
                "dataType": "json"
            })
                .done((data) => {
                    console.log(data.indexOf())
                    console.log(data)
                    const RecommandFrag = $(document.createDocumentFragment());
                    const Recommand = data.map(Recommand =>
                        `
                                
                    <div class="testimonial-item bg-light rounded p-4">
                        <i class="fa fa-quote-left fa-2x text-primary mb-3"></i>
                         <p>${Recommand.deputeContent}</p>
                        <div class="d-flex align-items-center">
                                   <img class="img-fluid flex-shrink-0 rounded" src="/images/${Recommand.imgfilepath}" style="width: 50px; height:50px;">
                            <div class="ps-3">
                            <h5 class="mb-1">${Recommand.title}</h5>
                            <small>${Recommand.providername}</small>
                            </div>
                        </div>
                    </div>
                            
                        
                        `)
                    RecommandFrag.append(Recommand);
                    $('#recommandlist').after(RecommandFrag)
                })


        }

        async function test2(value) {

            const { value: reason } = await Swal.fire({
                title: "選擇檢舉原因",
                input: "select",
                inputOptions: {
                    原因: {
                        60: "與本主題無關",
                        61: "洗版",
                        62: "辱罵",
                        67: "不當內容",
                    }
                },
                inputPlaceholder: "選擇檢舉原因",
                showCancelButton: true,
                inputValidator: (value) => {
                    return new Promise((resolve) => {
                        if (value != "") {
                            resolve();
                        } else {
                            resolve("請選擇一個檢舉原因");
                        }
                    });
                }
            });
            if (reason !== undefined) {
                const { value: text } = await Swal.fire({
                    input: "textarea",
                    inputLabel: "Message",
                    inputPlaceholder: "Type your message here...",
                    inputAttributes: {
                        "aria-label": "Type your message here"
                    },
                    showCancelButton: true
                });
                if (text !== undefined) {
                    $.ajax('@Url.Content("~/Depute/DeputeComplain")', {
                        "type": 'post', //POST、PUT、DELETE//
                        "data": {
                            "txtID": value,
                            "txtReportContent": text,
                            "txtSubTagID": reason,
                        },
                    })

                    Swal.fire("檢舉成功，我們會盡速為您處理");
                }
            }



        }


    </script>
