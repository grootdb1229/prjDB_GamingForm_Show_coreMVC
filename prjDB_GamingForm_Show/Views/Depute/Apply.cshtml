@model prjDB_GamingForm_Show.Models.Entities.Depute

@{
    ViewData["Title"] = "Apply";
    Layout = "~/Views/Shared/_Layout_DBM.cshtml";
}

<h2>應徵</h2>

<h4>請輸入您的應徵資訊</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Apply">
            <input type="text" name="Id" hidden>
            
            <div class="form-group" hidden>
                <label asp-for="DeputeId" class="control-label"></label>
                <input name="DeputeId" value="@Model.DeputeId" class="form-control" />
            </div>
            <div class="form-group">
                <label  class="control-label">會員編號</label>
                <input name="MemberId" value="@ViewBag.memberid"class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label  class="control-label" hidden>ApplyStatusId</label>
                <input name="ApplyStatusId" value="5" class="form-control" hidden/>
            </div>
            <div>
                <label  class="control-label">應徵補充資訊</label>
                <textarea name="RecordContent" rows="4" cols="50" placeholder="在這裡輸入您的應徵補充資訊..."></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="送出並應徵" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DeputeMain">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
