@section Scripts {
    <script>
        let Cid
        let AFId
        function test(id, Aid) {
            Cid = id
            AFId = Aid
        }

        const btnNo = document.querySelector('#btn_No')
        const btnYes = document.querySelector('#btn_Yes')

        //btnNo.addEventListener('click',()=>{
        //    test()
        //})
        btnNo.addEventListener('click', () => {

            fetch(`@Url.Content("~/Admin/BlogArticleComplainFail")?APId=${Cid}`)
                .then(response => response.text())
                .then(data => {

                    $('#staticBackdrop').modal('hide');
                    confirm(`${data}`);
                    window.location.href = "/Admin/BlogArticleComplainList"
                }
                )

        })

        btnYes.addEventListener('click', () => {

            fetch(`@Url.Content("~/Admin/BlogArticleComplainSusscess")?APId=${Cid}&AFId=${AFId}`)
                .then(response => response.text())
                .then(data => {

                    $('#staticBackdrop').modal('hide');
                    confirm(`${data}`);
                    window.location.href = "/Admin/BlogArticleComplainList"
                }
                )

        })




    </script>
