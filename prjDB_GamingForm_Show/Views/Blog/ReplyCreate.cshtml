@model prjDB_GamingForm_Show.ViewModels.CBlogViewModel

@{
    ViewData["Title"] = "ReplyCreate";
}
<link rel="stylesheet" href="~/css/blogstyle.css" type="text/css">
@section Styles{
    <style>
        input {
            margin-top: 5px
        }
        label{
            margin-top:5px
        }
    </style>
    }

<h2 style="text-align:center;margin:10px auto;color:whitesmoke">回復發表</h2>


<div>
    <div class="row" style="margin:10px auto;width:650px;background-color:#4F4F4F;border-radius:8px;box-shadow:0px 0px 8px 8px #cccccc">
        <div class="col-md-4">
            <form asp-action="ReplyCreate" method="post">
                <input type="hidden" name="AFId" value=" @Model.articles.First().ArticleId" />
                <input type="hidden" name="ArticleId" value=" @Model.articles.First().ArticleId" />
                <input type="hidden" name="FId" value=" @Model.blogs.FirstOrDefault().BlogId" />


                <div class="form-group">
                    @*                    <label asp-for="subBlogs." class="control-label"></label>
                    <input asp-for="SubBlogId" class="form-control" />
                    <span asp-validation-for="SubBlogId" class="text-danger"></span>*@
                </div>

                <div class="form-group">
                    <label asp-for="replies.First().ReplyContents" class="control-label"></label>
                    <textarea name="ReplyContents" class="form-control" style="width:600px;height:400px"></textarea>
                    <span asp-validation-for="replies.First().ReplyContents" class="text-danger"></span>
                </div>


                <div class="form-group">
                    @*<label asp-for="ModifiedDate" class="control-label"></label>
                    <input asp-for="ModifiedDate" class="form-control" />
                    <span asp-validation-for="ModifiedDate" class="text-danger"></span>*@
                    <input type="hidden" name="ModifiedDate" value="@DateTime.Now" />
                    <input type="hidden" name="MemberId" value="15" />
                </div>
                <div class="form-group">
                    <input type="submit" value="回覆" class="btn btn-default" />
                </div>

            </form>
        </div>
    </div>


</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
