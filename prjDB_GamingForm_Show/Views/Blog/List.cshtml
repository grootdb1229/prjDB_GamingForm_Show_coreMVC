@model prjDB_GamingForm_Show.ViewModels.CBlogViewModel

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/blogstyle.css" type="text/css">

<header class="header-section">

    <div class="nav-options">

        <div class="container">

            <div class="nav-menu">
                <ul>
                    <li>
                        <a href="@Url.Action("List", "Blog")"><span>全部</span></a>
                    </li>
                    @{
                        foreach (var item in Model.subTags)
                        {
                            <li>
                                <a href="@Url.Action("List", "Blog", new { FId =item.SubTagId})"><span>@item.Name </span></a>
                            </li>
                        }
                    }
                </ul>
            </div>
            <div>

                <div style="margin:3px 30%">

                    @using (Html.BeginForm())
                    {
                        @:關鍵字 @Html.TextBox("txtKeyword")
                        <input type="submit" value="查詢" />
                    }
                </div>
            </div>
            @*             @using (Html.BeginForm())
            {
            @:關鍵字 @Html.TextBox("txtKeyword")
            <input type="submit" value="查詢" />
            } *@
        </div>
    </div>
</header>
<section class="instagram-post-section spad" style="background-color:#272727">
    <div style="float:right;margin-left:10px;margin-right:10px;width:350px;background-color:#4F4F4F;-webkit-box-shadow: #FFF 0 -1px 4px, #ff0 0 -2px 10px, #ff8000 0 -10px 20px, red 0 -18px 40px, 5px 5px 15px 5px rgba(0,0,0,0);
    box-shadow: #FFF 0 -1px 4px, #ff0 0 -2px 10px, #ff8000 0 -10px 20px, red 0 -18px 40px, 5px 5px 15px 5px rgba(0,0,0,0);> 火燒厝
    @*<div style="float:right;margin-left:10px;margin-right:10px;width:350px;background-color:#4F4F4F;box-shadow:0px 0px 8px 8px #cccccc;border-radius:8px">*@
        <div style="padding:10px;margin-right:5%">
            <div >
                <table class="table" style="color:antiquewhite; ">
                    <tr style="text-align:center;font-size:24px">
                        <th>熱門看板</th>
                    </tr>
                    @{

                        @foreach (var blog in Model.blogs.OrderByDescending(b => b.SubBlogs.Sum(sb => sb.Articles.Sum(a => a.ViewCount))).Take(5))
                        {
                            <tr>
                                <td>
                                    <a style="text-decoration:none" href="@Url.Action("ArticleList", "Blog", new { FId = blog.BlogId})">
                                        <p>@blog.Title - 人氣: @blog.SubBlogs.Sum(sb => sb.Articles.Sum(a => a.ViewCount))</p>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
        </div>
    </div>




    <div style="float:left;padding:10px">
        <p style="text-align:center;font-size:24px">熱門商品</p>
        <div id="div1">@*會顯示輪播廣告*@</div>
        <br />
        <div style="display:flex">
            <a href="@Url.Action("DeputeList","Depute")" target="_blank">
                <img src="~/images/AD/forjob.jpg" width="330" height="450" alt="" style=" margin-right:15px;border-radius:5px">
            </a>
        </div>
    </div>



    <div class="container">
        <div class="row" style="border-radius:8px;box-shadow:0px 0px 8px 8px #cccccc">
            <div class="col-lg-12" style="background-color:#4F4F4F;border-radius:8px">

                @{
                    foreach (var item in Model.blogs)
                    {
                        <div class="ip-item" style="border-bottom:1px dotted black;padding:12px;margin:0px;">
                            <div class="ip-pic">
                                <a href="@Url.Action("ArticleList", "Blog", new { FId =item.BlogId})">
                                    <img src="~/images/Blogimages/@item.FImagePath" width="360" height="108" alt="">

                                </a>
                            </div>
                            <div class="ip-text" style="margin-bottom:24px">
                                <i class="bi bi-caret-up-fill" style="color:red"></i>
                                <a style="text-decoration:none" href="@Url.Action("ArticleList", "Blog", new { FId =item.BlogId})">
                                    <span style="color: #FFFFFF;font-size:28px">@item.Title</span>
                                </a>
                                <br />
                                @{
                                    if (!item.SubBlogs.Any(s => s.Articles.Any()))
                                    {
                                        <a style="text-decoration:none" href="@Url.Action("ArticleList", "Blog", new { FId =item.BlogId})">
                                            <span style="color: #FFFFFF;font-size:16px">目前還沒有文章</span>
                                        </a>
                                        //<p style="font-size:16px">目前還沒有文章</p>
                                    }
                                    else
                                    {
                                        var latestArticle = item.SubBlogs.SelectMany(s => s.Articles)
                                        .OrderByDescending(a => a.ModifiedDate)
                                        .FirstOrDefault();

                                        <a style="font-size:16px;text-decoration:none" href="@Url.Action("ArticleContent", "Blog", new { FId =item.BlogId,AFId=latestArticle.ArticleId})">@latestArticle.Title</a>
                                    }
                                }<br/>
                            <i class="bi bi-file-earmark-text" title="昨日發文數" style="">@item.SubBlogs.FirstOrDefault().Articles.Count(a => a.ModifiedDate.Date == DateTime.Today.AddDays(-1))</i>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>

