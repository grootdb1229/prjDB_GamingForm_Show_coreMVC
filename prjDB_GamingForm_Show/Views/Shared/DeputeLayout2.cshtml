    <script src="~/layout/jobentry-1.0.0/lib/waypoints/waypoints.min.js"></script>
    <script src="~/layout/jobentry-1.0.0/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
