                                    @Html.ActionLink("找委託","Deputelist","Depute",null,new{@class ="btn btn-secondary py-md-3 px-md-5 animated slideInRight btndp",@id="btndp"})
                                    @* <a href="" class="btn btn-secondary py-md-3 px-md-5 animated slideInRight btndp" id="btndp">找委託</a> *@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="owl-carousel-item position-relative">
                    <img class="img-fluid" src="~/images/03.jfif" alt="">
                    <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(43, 57, 64, .5);">
                        <div class="container">
                            <div class="row justify-content-start">
                                <div class="col-10 col-lg-8">
                                    <h1 class="display-3 text-white animated slideInDown mb-4">Groot委託榜~你今天懸賞了沒?</h1>
                                    <p class="fs-5 fw-medium text-white mb-4 pb-2">每日更新告訴您哪種技能最搶手.</p>
                                    @Html.ActionLink("發布委託","Create","Depute",null,new{@class ="btn btn-secondary py-md-3 px-md-5 animated slideInRight btndp",@id="btndp"})
                                    @* <a href="~/../Views/Depute/Create.cshtml" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft btndp" id="btndp">發布委託</a> *@
                                    @Html.ActionLink("找委託","Deputelist","Depute",null,new{@class ="btn btn-secondary py-md-3 px-md-5 animated slideInRight btndp",@id="btndp"})
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Carousel End -->
        
       
        @RenderBody();

        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
        <!-- Footer-->
        <footer class="py-5 bg-dark">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2023</p></div>
        </footer>
    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/layout/jobentry-1.0.0/lib/wow/wow.min.js"></script>
