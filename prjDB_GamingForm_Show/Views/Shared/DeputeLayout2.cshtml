@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Depute -->
    <meta charset="utf-8">
    <title>JobEntry - Job Portal Website Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">
    <!-- Favicon -->
    <link href="~/layout/jobentry-1.0.0/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/layout/jobentry-1.0.0/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/layout/jobentry-1.0.0/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->

    <link href="~/layout/jobentry-1.0.0/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/layout/jobentry-1.0.0/css/style.css" rel="stylesheet">
    <!-- Depute -->
    @await RenderSectionAsync("CSS", required: false)

</head>
<body>



    <div class="container-xxl bg-white p-0">

        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Carousel Start -->
        <div class="container-fluid p-0">
            <div class="owl-carousel header-carousel position-relative">
                <div class="owl-carousel-item position-relative">
                    <img class="img-fluid" src="~/images/02.jfif" alt="">
                    <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(43, 57, 64, .5);">
                        <div class="container">
                            <div class="row justify-content-start">
                                <div class="col-10 col-lg-8">
                                    <h1 class="display-3 text-white animated slideInDown mb-4">我們有各式人才~包山包海</h1>
                                    <p class="fs-5 fw-medium text-white mb-4 pb-2">找繪畫人才?找工程人才?有想委託案件?通通在這裡.</p>
                                    @Html.ActionLink("發布委託","Create","Depute",null,new{@class ="btn btn-secondary py-md-3 px-md-5 animated slideInRight btndp",@id="btndp"})
                                    @* <a href="~/../Views/Depute/Create.cshtml" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft btndp" id="btndp">發布委託</a> *@
                                    @Html.ActionLink("找委託","Deputelist","Depute",null,new{@class ="btn btn-secondary py-md-3 px-md-5 animated slideInRight btndp",@id="btndp"})
                                    @* <a href="" class="btn btn-secondary py-md-3 px-md-5 animated slideInRight btndp" id="btndp">找委託</a> *@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="owl-carousel-item position-relative">
                    <img class="img-fluid" src="~/images/03.jfif" alt="">
                    <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(43, 57, 64, .5);">
                        <div class="container">
                            <div class="row justify-content-start">
                                <div class="col-10 col-lg-8">
                                    <h1 class="display-3 text-white animated slideInDown mb-4">Groot委託榜~你今天懸賞了沒?</h1>
                                    <p class="fs-5 fw-medium text-white mb-4 pb-2">每日更新告訴您哪種技能最搶手.</p>
                                    @Html.ActionLink("發布委託","Create","Depute",null,new{@class ="btn btn-secondary py-md-3 px-md-5 animated slideInRight btndp",@id="btndp"})
                                    @* <a href="~/../Views/Depute/Create.cshtml" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft btndp" id="btndp">發布委託</a> *@
                                    @Html.ActionLink("找委託","Deputelist","Depute",null,new{@class ="btn btn-secondary py-md-3 px-md-5 animated slideInRight btndp",@id="btndp"})
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Carousel End -->
        
       
        @RenderBody();

        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
       
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/layout/jobentry-1.0.0/lib/wow/wow.min.js"></script>
    <script src="~/layout/jobentry-1.0.0/lib/easing/easing.min.js"></script>
    <script src="~/layout/jobentry-1.0.0/lib/waypoints/waypoints.min.js"></script>
    <script src="~/layout/jobentry-1.0.0/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/layout/jobentry-1.0.0/js/main.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
