﻿
@model System.Collections.Generic.Dictionary<string, string>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<body>
    <div id="order"></div>
    <form id="form" name="form" method="POST" action="https://payment-stage.ecpay.com.tw/Cashier/AioCheckOut/V5">
        <!--step2 : 收到後端的值印出來-->
        <div class="container px-4 px-lg-5 mt-5" >
            <button class="btn btn-light" style="float:left;bottom: 30px;  right: 30px;" type="submit" id="checkoutBtn">
            前往付款
        </button>
        </div>
        @foreach (var key in @Model.Keys.ToList())
        {
            <input type="text" name="@key" value="@Model[key]" hidden/><br />
        } 
    </form>
    <!-- js套件 -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-twzipcode@1.7.14/jquery.twzipcode.min.js"></script>
    <!-- 自己的 -->
    <script src="~/js/ecpay.js"></script>
</body>
<script>
    function loadOrder() {
        $('#order').load('@Url.Content("~/shop/YourOrder")');
    }
    loadOrder();

</script>
</html>