@model prjDB_GamingForm_Show.ViewModels.CValidationViewModel

@{
    ViewData["Title"] = "ValidationPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>驗證頁面</h2>

<h3>請輸入您的會員編號及驗證碼</h3>

div class="row">
<div class="col-md-4">
    <form id="ValidationForm" onsubmit="EditPasswordForm()" asp-action="ValidationPage" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="txtVal_MemberID" class="control-label"></label>
            <input asp-for="txtVal_MemberID" class="form-control" />
            <span asp-validation-for="txtVal_MemberID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="txtVal_Code" class="control-label"></label>
            <input asp-for="txtVal_Code" class="form-control" />
            <span asp-validation-for="txtVal_Code" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="驗證會員身分" class="btn btn-primary" />
        </div>
    </form>
</div>  
    <form>
        <div class="form-group">
            <label asp-for="txtVal_Password" class="control-label"></label>
            <input asp-for="txtVal_Password" class="form-control" />
            <span asp-validation-for="txtVal_Password" class="text-danger"></span>
        </div>
    </form>
<div>
    <a asp-controller="Home" asp-action="Login">返回登入頁面</a>
</div>

<script>
    window.onload = function () {
        let ValidationForm = document.querySelector('#ValidationForm');
        ValidationForm.onsubmit
    }



</script>
