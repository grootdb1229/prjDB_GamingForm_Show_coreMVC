@{
    ViewData["Title"] = "登入";
    Layout = "~/Views/Shared/_AdminHomeLayout.cshtml";
}


<div class="sidenav">    
    <div class="login-main-text">
        <img src="~/logo/logo.png" />
        <h2>Groot管理系統<br> 登入頁面</h2>
        <p>請從此處登入開始管理系統</p>
    </div>
</div>
@using (Html.BeginForm())
{
    <div class="main">
        <div class="col-md-6 col-sm-12">
            <div class="login-form">
                <form>
                    <div class="form-group">
                        <label>管理者帳號</label>
                        <input type="text" class="form-control" placeholder="帳號" name="txtAccount" id="acc">
                    </div>
                    <div class="form-group">
                        <label>管理者密碼</label>
                        <input type="password" class="form-control" placeholder="密碼" name="txtPassword" id="pwd">
                    </div>
                    <button type="submit" class="btn btn-black">登入</button>
                    <button type="button" class="btn btn-secondary" id="btnre">重新輸入</button>
                </form>
            </div>
        </div>
    </div>
}
@section Scripts{
    <script>
        document.querySelector('#btnre').addEventListener('click',()=>{
            document.querySelector('#acc').value = "";
            document.querySelector('#pwd').value = "";
        })
    </script>
}

